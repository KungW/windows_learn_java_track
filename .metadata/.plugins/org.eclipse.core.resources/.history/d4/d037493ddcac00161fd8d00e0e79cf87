package com.ct.listview;

import android.app.Activity;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.TextView;

public class MyAdapter extends BaseAdapter{
	private Activity   context;//ÉÏÏÂÎÄ¶ÔÏó£¬Ö¸µÄ¾ÍÊÇactivity
	private String[]   data;//Ö¸µÄÊÇÐèÒªÏÔÊ¾µÄÊý¾Ý
	private int        layout;//Êý¾ÝÐèÒªÏÔÊ¾µÄÑùÊ½
	//Ìá¹©Ò»ÖÖ´ø²ÎµÄ¹¹Ôì·½·¨£¬ÒªÇóÊ¹ÓÃ´ËAdapter£¬±ØÐëÌá¹©ËùÐèÒªµÄÊý¾Ý
	public MyAdapter(Activity context,String[] data,int layout){
			this.context=context;
			this.data=data;
			this.layout=layout;
	}
	//ÐèÒªÏÔÊ¾µÄÌõÄ¿ÓÐ¶àÉÙ
	@Override
	public int getCount() {
		return data.length;
	}
	//Ã¿Ò»¸öÌõÄ¿ÏÔÊ¾µÄÄÚÈÝ
	@Override
	public Object getItem(int position) {
		// TODO Auto-generated method stub
		return data[position];
	}
	//»ñµÃItemµÄid
	@Override
	public long getItemId(int position) {
		// TODO Auto-generated method stub
		return position;
	}
	//Ã¿¸öitem×îÖÕÏÔÊ¾ÑùÊ½
	@Override
	public View getView(int position, 
			View convertView, 
			ViewGroup parent) {
		/*Ë¼¿¼£¬Ã¿Ò»¸öItem¶¼ÊÇ²¼¾Ö£¬ÄÇÒ²ÊÇView¡£
		 * getViewÖ÷ÒªµÄ×÷ÓÃÔÚÓÚ¾ö¶¨×îÖÕÏÔÊ¾µÄÑù×Ó¡£ÊÇ²»ÊÇÐèÒªView£¿
		 * Ïë°ì·¨¹¹½¨View¶ÔÏó¡£ÎÒÃÇÒÑÖªÊÇ²¼¾Ölayout£¬ÄÇÃ´½ÓÏÂÀ´µÄ²Ù×÷¾ÍÊÇ°Ñ
		 * layout¼ÓÔØµ½ÄÚ´æÖÐ£¬ÄÇÃ´×îÖÕÏÔÊ¾µÄView¶ÔÏó¾ÍÓÐÁË
		*/
		/*
		 * µÚÒ»²½£¬¼ÓÔØLayout½øÀ´
		 * µÚ¶þ²½£¬ÉèÖÃÏÔÊ¾
		 * µÚÈý²½£¬µÃ³ö×îÖÕµÄView
		 */
		//¼ÓÔØÐèÒªÏÔÊ¾µÄ²¼¾Ö
		View  view=View.inflate(context,layout,null);
		//ÉèÖÃÏÔÊ¾µÄÄÚÈÝ
		TextView  tv=(TextView) view.findViewById(R.id.textView1);
		tv.setText(data[position]);
		//µ½´ËÎªÖ¹¡£View²Ù×÷Íê³É£¬·µ»Øview
		return view;
	}

}
