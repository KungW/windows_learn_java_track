<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xzsf.gamebox.HeroActivity" >
	<include
	    android:id="@+id/title"
	    layout="@layout/title_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
	<RelativeLayout
	    android:layout_below="@id/title"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
	    >
    <EditText
        android:id="@+id/tv_herodes_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="86dp"
        android:background="@null"
        android:text="TextView" />

    <EditText
        android:id="@+id/tv_herodes_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_herodes_name"
        android:layout_below="@+id/tv_herodes_name"
        android:layout_marginTop="38dp"
        android:background="@null"
        android:text="TextView" />

    <EditText
        android:id="@+id/tv_herodes_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_herodes_price"
        android:layout_below="@+id/tv_herodes_price"
        android:layout_marginTop="49dp"
        android:background="@null"
        android:text="TextView" />

    <EditText
        android:id="@+id/tv_herodes_blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_herodes_sign"
        android:layout_below="@+id/tv_herodes_sign"
        android:layout_marginTop="52dp"
        android:background="@null"
        android:text="TextView" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_herodes_blood"
        android:layout_below="@+id/tv_herodes_blood"
        android:visibility="gone"
        android:text="确定" />
 
</RelativeLayout>
</RelativeLayout>