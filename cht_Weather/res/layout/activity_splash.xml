<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_start"
    >
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_vp"
        />
    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:textColor="#ff22dd22"
        android:background="#00000000"
        android:visibility="invisible"
        android:text="开始体验之旅" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" 
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        >
        <ImageView
            android:id="@+id/iv_splash_point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/point_checked" 
            android:padding="3dp"
            />
        <ImageView
            android:id="@+id/iv_splash_point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/point_nocheked" 
             android:padding="3dp"
            />
        <ImageView
            android:id="@+id/iv_splash_point3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/point_nocheked" 
             android:padding="3dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:text="WEATHER"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
